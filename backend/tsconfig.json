{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist/",
    "module": "commonjs",
    "target": "es2015",
    "lib": ["es6"],
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
